<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
  <route id="my_app_blog_homepage" path="/">
    <default key="_controller">MyAppBlogBundle:Acteur:topActeur</default>
  </route>
  <route id="top_acteur" path="/topActeur">
    <default key="_controller">MyAppBlogBundle:Acteur:topActeur</default>
  </route>
  
  <route id="myapp_acteur_supprimer" path="/acteur/supprimer/{id}">
    <default key="_controller">MyAppBlogBundle:Acteur:delete</default>
  </route>

  <route id="myapp_acteur_ajouter" path="/acteur/add">
    <default key="_controller">MyAppBlogBundle:Acteur:ajouter</default>
  </route>

  <route id="myapp_choisir_langue" path="/topActeur/{language}">
    <default key="_controller">MyAppBlogBundle:Acteur:setLocaleAction</default>
  </route>
  
  
    <route id="top_acteur_json" path="/all.json">
    <default key="_controller">MyAppBlogBundle:Acteur:json</default>
  </route>
  
    <route id="top_acteur_guzzle" path="/guzzle">
    <default key="_controller">MyAppBlogBundle:Acteur:guzzle</default>
  </route>

</routes>
